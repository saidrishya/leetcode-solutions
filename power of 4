/*
Given an integer (signed 32 bits), write a function to check whether it is a power of 4.

Example 1:

Input: 16
Output: true
*/

class Solution {
public:
    bool isPowerOfFour(int n) {
         if(n<=0) return false;
        while(n>1)
        {
            if(n%4!=0) return false;
        n/=4;
        }
    return true;
    }
};
