/*
Given an integer, write a function to determine if it is a power of three.

Example 1:

Input: 27
Output: true
Example 2:

Input: 0
Output: false
*/

class Solution {
public:
    bool isPowerOfThree(int n) {
    if(n<=0) return false;
      while(n>1)
      {
          if(n%3!=0) return false;
         n/=3;
      }
    return true;
    }
};
